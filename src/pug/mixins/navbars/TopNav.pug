mixin TopNav
  +Section(false, 'container')(class="bg-danger py-2 d-none d-sm-block")
    img(src=`${CWD}assets/img/banner/sales.png` height="51" alt='' ) 
    .row.align-items-center
      .col-auto.d-none.d-lg-block
        p.my-2.fs--1
          i.fas.fa-map-marker-alt.me-3.text-white
          span.text-white 12 Hoang Mai - Ha Noi 
      .col-auto.ms-md-auto.order-md-2.d-none.d-sm-block
        ul.list-unstyled.list-inline.my-2
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-facebook-f.text-900.text-white
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-pinterest.text-900.text-white
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-twitter.text-900.text-white
          li.list-inline-item
            a.text-decoration-none(href='#!')
              i.fab.fa-instagram.text-900.text-white  

      .col-auto
        p.my-2.fs--1
          i.fas.fa-envelope.me-3.text-white
          a.text-white(href='contact-henry@gmail.com ').text-900 contact-henry@gmail.com  