mixin PricingTable(config, ...items) 
	.col-md-4
		.card.mb-5.mb-md-0.h-100&attributes(attributes)
			.text-center.mb-5
				span.badge.bg-black.fw-normal.text-uppercase(class=`bg-${config.planBg}`)=config.plan
			.card-body.px-4.py-6.py-md-5.py-lg-6
				.d-flex.justify-content-start.text-secondary
					span.display-3.fw-medium=config.price
					span.display-4.fw-medium VNĐ

				p.text-muted.mb-2.my-md-3 Giới hạn tư nhân là phổ biến nhất
				hr.border.border-1 
				ul.list-unstyled
					each item in items  
						li.mb-3!=item
				if config.notActiveButton    
					.d-grid
						a.btn.btn-lg.btn-secondary(href='#!') Mua ngay
				else 
					.d-grid 
						a.btn.btn-lg.btn-primary(href='#!') Mua ngay


mixin Pricing
	+Section.bg-600
		.row
			.col
				h6.font-sans-serif.text-primary.fw-bold Kế hoạch
				h1.mb-6 Nhận ngay mức giá ưu đãi
			.col
				.d-flex.justify-content-end
					label.form-check-label.me-2(for='customSwitch1') Monthly
					.form-check.form-switch
						input#customSwitch1.form-check-input(type='checkbox' checked)
						label.form-check-label.align-top(for='customSwitch1') Yearly

		.row 
			- const p1 = {plan:'Starter',planBg:'secondary',price:'200.000',notActiveButton: false}
			- const p2 = {plan:'premium',planBg:'info',price:'500.000',notActiveButton: true }  
			- const p3 = {plan:'enterprise',planBg:'danger',price:'700.000',notActiveButton: false}

			+PricingTable(p1, '<i class="fas fa-check text-info me-2"></i>Tham gia 25 khóa học', '<i class="fas fa-check text-info me-2"></i>Thảo luận về khóa học','<i class="fas fa-check text-info me-2"></i>Xem ngoại tuyến', '<i class="fas fa-check text-muted me-2"></i>Chứng chỉ sau khi hoàn thành','<i class="fas fa-check text-muted me-2"></i> Phiên riêng tư')
			+PricingTable(p2, '<i class="fas fa-check text-info me-2"></i>Tham gia 25 khóa học', '<i class="fas fa-check text-info me-2"></i>Thảo luận về khóa học', '<i class="fas fa-check text-info me-2"></i>Chứng chỉ sau khi hoàn thành','<i class="fas fa-check text-info me-2"></i>Xem ngoại tuyến', '<i class="fas fa-check text-muted me-2"></i> Phiên riêng tư')
			+PricingTable(p3, '<i class="fas fa-check text-info me-2"></i>Tham gia 25 khóa học', '<i class="fas fa-check text-info me-2"></i>Thảo luận về khóa học', '<i class="fas fa-check text-info me-2"></i>Chứng chỉ sau khi hoàn thành','<i class="fas fa-check text-info me-2"></i>Xem ngoại tuyến', '<i class="fas fa-check text-info me-2"></i> Phiên riêng tư')